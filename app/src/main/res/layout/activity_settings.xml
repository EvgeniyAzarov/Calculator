<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/separator"
    android:dividerPadding="3dp"
    android:showDividers="middle"
    android:layout_margin="10dp">

    <Switch
        android:text="@string/settings_save"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/switchSave"
        android:layout_weight="1"
        android:layout_gravity="top" />

    <Switch
        android:text="@string/settings_advancedmode"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/switchAdvencedMode"
        android:checked="false"
        android:layout_weight="1"
        android:layout_gravity="top" />

    <TextView
        android:text="@string/settings_theme"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTheme" />

    <RadioGroup
        android:id="@+id/radioGroupTheme"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="horizontal">

        <RadioButton
            android:text="@string/settings_theme_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonLight"
            android:layout_weight="1"
            android:layout_gravity="center" />

        <RadioButton
            android:text="@string/settings_theme_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonDark"
            android:layout_weight="1"
            android:layout_gravity="center"/>
    </RadioGroup>

</LinearLayout>